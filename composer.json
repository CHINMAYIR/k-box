{
	"name": "klink/dms",
	"description": "The K-Link DMS.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",	
	
	"repositories": [
        {
            "type": "composer",
            "url": "http://repo.klink.dyndns.ws"
        }
        
    ],

	"require": {
		"laravel/framework": "5.0.*",
		"barryvdh/laravel-async-queue": "0.3.*",
		"franzose/closure-table": "4.*",
		"graham-campbell/markdown": "~3.0",
		"phpoffice/phpword": "~0.12.0",
        "klink/adapterboilerplate" : "1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.5",
		"illuminate/workbench":"5.0.x-dev",
        "mockery/mockery": "dev-master@dev",
        "laracasts/testdummy": "~2.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"KlinkDMS\\": "app/"
		},
		"psr-0": {
            "Klink\\DmsAdapter\\": "workbench/klink/dms-adapter/src/",
            "Klink\\DmsSearch\\": "workbench/klink/dms-search/src/",
            "Klink\\DmsDocuments\\": "workbench/klink/dms-documents/src/",
			"Klink\\DmsPreviews\\": "workbench/klink/dms-previews/src/"
        }
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
