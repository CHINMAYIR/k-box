{
	"name": "klink/dms",
	"description": "The K-Link DMS.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",	
	
	"repositories": [
        {
            "type": "composer",
            "url": "https://build.klink.asia/composer/"
        }
        
    ],

	"require": {
		"php": ">=5.6.4",
		"laravel/framework": "5.2.*",
		"barryvdh/laravel-async-queue": "0.4.*",
		"franzose/closure-table": "~4.1.0",
		"graham-campbell/markdown": "~6.0",
		"phpoffice/phpword": "~0.12.0",
        "klink/adapterboilerplate" : "3.0.2",
		"guzzlehttp/guzzle": "~6.2.0",
		"doctrine/dbal": "^2.5",
        "league/csv": "^8.0",
		"phpoffice/phppresentation": "^0.6.0",
		"jenssegers/date": "^3.2"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.5",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpspec/phpspec": "~2.1",
		"jakub-onderka/php-parallel-lint": "^0.9.2",
		"symfony/dom-crawler": "~3.0",
		"symfony/css-selector": "~3.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"KlinkDMS\\": "app/",
            "Klink\\DmsMicrosites\\": "workbench/klink/dms-project-microsites/src/"
		},
		"psr-0": {
            "Klink\\DmsAdapter\\": "workbench/klink/dms-adapter/src/",
            "Klink\\DmsSearch\\": "workbench/klink/dms-search/src/",
            "Klink\\DmsDocuments\\": "workbench/klink/dms-documents/src/",
			"Klink\\DmsPreviews\\": "workbench/klink/dms-previews/src/"
        },
        "files" : [ "app/helpers.php" ]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-root-package-install": [ 
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"" 
         ], 
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan dms:lang-publish"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
