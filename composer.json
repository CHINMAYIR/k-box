{
	"name": "klink/dms",
	"description": "The K-Link DMS.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",	
	
	"repositories": [
        {
            "type": "composer",
            "url": "http://repo.klink.dyndns.ws"
        }
        
    ],

	"require": {
		"php": ">=5.5.9",
		"laravel/framework": "~5.1.11",
		"barryvdh/laravel-async-queue": "0.4.*",
		"franzose/closure-table": "~4.0.1",
		"graham-campbell/markdown": "~6.0",
		"phpoffice/phpword": "~0.12.0",
        "klink/adapterboilerplate" : "~1.1",
		"guzzlehttp/guzzle": "6.0.2",
		"doctrine/dbal": "^2.5"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.5",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"KlinkDMS\\": "app/",
            "Klink\\DmsMicrosites\\": "workbench/klink/dms-project-microsites/src/"
		},
		"psr-0": {
            "Klink\\DmsAdapter\\": "workbench/klink/dms-adapter/src/",
            "Klink\\DmsSearch\\": "workbench/klink/dms-search/src/",
            "Klink\\DmsDocuments\\": "workbench/klink/dms-documents/src/",
			"Klink\\DmsPreviews\\": "workbench/klink/dms-previews/src/"
        },
        "files" : [ "app/helpers.php" ]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
